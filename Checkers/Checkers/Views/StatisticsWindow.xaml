<Window x:Class="Checkers.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers.Views"
        mc:Ignorable="d"
        Title="Statistics" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        Tag="Statistics"
        ResizeMode="NoResize">
    <Grid>
        <DataGrid 
            x:Name="DataGridStatistics"
            ItemsSource="{Binding Path=User}"
            Margin="174,189,174,75"
            CanUserReorderColumns="True" 
            CanUserResizeColumns="True" 
            CanUserResizeRows="True"
            AutoGenerateColumns="False" 
            GridLinesVisibility="All" 
            SelectionUnit="FullRow" 
            SelectionMode="Single"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto" 
            CanUserAddRows="False" 
            CanUserDeleteRows="False"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Number}" Header="№" Width="45" />
                <DataGridTextColumn Binding="{Binding Username}" Header="Username" Width="100" />
                <DataGridTextColumn Binding="{Binding Wins}" Header="Wins" Width="100" />
                <DataGridTextColumn Binding="{Binding Loses}" Header="Loses" Width="100" />
                <DataGridTextColumn Binding="{Binding TotalTime}" Header="Total time played"  Width="120" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Main menu" MaxWidth="150" Width="100" MinHeight="30" Padding="10 5" Height="30" Background="#F97134" FontWeight="Heavy" 
                Foreground="#6F0B5B" Command="{Binding ExitToMenuCommand}" Margin="564,48,136,356"/>
        <Button Content="Import" MaxWidth="200" Width="100" MinHeight="30" Height="30" Padding="10 5" Background="#F97134" FontWeight="Heavy" 
                Foreground="#6F0B5B" Command="{Binding ImportUsersDataCommand}" Margin="153,48,547,356"/>
        <Button Content="JSON" MaxWidth="200" Width="100" MinHeight="30" Height="30" Padding="10 5" Background="#F97134" FontWeight="Heavy" 
                Foreground="#6F0B5B" Command="{Binding ExportUsersInJSONCommand}" Margin="285,48,415,356"/>
        <Button Content="XML" MaxWidth="200" Width="100" MinHeight="30" Height="30" Padding="10 5" Background="#F97134" FontWeight="Heavy" 
                Foreground="#6F0B5B" Command="{Binding ExportUsersInXMLCommand}" Margin="424,48,276,356"/>
    </Grid>
</Window>
